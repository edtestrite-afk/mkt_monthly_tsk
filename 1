const STORAGE_KEY = 'marketingTasks_tier_system';
let tasks = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
let currentViewDate = new Date();
let editingId = null;

const qs = s => document.querySelector(s);
const priorityClass = { high:'priority-high', med:'priority-med', low:'priority-low' };

function getMonthlyUGCStats(){
  const monthKey = `${currentViewDate.getFullYear()}-${currentViewDate.getMonth()}`;
  const monthlyUGC = tasks.filter(t=>{
    const d = new Date(t.date);
    const key = `${d.getFullYear()}-${d.getMonth()}`;
    return t.type==='UGC Video' && key===monthKey && t.status==='Published';
  });
  const count = monthlyUGC.length;
  const rate = (count >= 15) ? 18 : (count >=10 ? 15 : (count >=6 ? 12 : (count >=1 ? 10 : 0)));
  return { count, rate, totalBonus: count * rate };
}

function renderCalendar(){
  const grid = qs('#calendar');
  grid.innerHTML='';

  ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'].forEach(d=>{
    const el=document.createElement('div');
    el.className='p-2 border-r border-b text-center text-xs font-bold bg-slate-50';
    el.textContent=d;
    grid.appendChild(el);
  });

  const year=currentViewDate.getFullYear();
  const month=currentViewDate.getMonth();
  qs('#monthDisplay').textContent=new Intl.DateTimeFormat('en-US',{month:'long',year:'numeric'}).format(currentViewDate);

  const firstDay=new Date(year,month,1).getDay();
  const daysInMonth=new Date(year,month+1,0).getDate();

  for(let i=0;i<firstDay;i++){
    const empty=document.createElement('div');
    empty.className='h-32 border-r border-b bg-slate-50/30';
    grid.appendChild(empty);
  }

  for(let day=1;day<=daysInMonth;day++){
    const dateStr=`${year}-${String(month+1).padStart(2,'0')}-${String(day).padStart(2,'0')}`;
    const dayTasks=tasks.filter(t=>t.date===dateStr);

    const cell=document.createElement('div');
    cell.className='h-36 border-r border-b p-1 relative group overflow-y-auto';

    const label=document.createElement('span');
    label.className='text-[10px] font-bold text-slate-400';
    label.textContent=day;
    cell.appendChild(label);

    const addBtn=document.createElement('button');
    addBtn.textContent='+';
    addBtn.className='absolute top-1 right-1 text-xs opacity-0 group-hover:opacity-100';
    addBtn.onclick=()=>openModal(null,dateStr);
    cell.appendChild(addBtn);

    // Status color mapping
const statusClass = {
  "In Progress": "status-inprogress",
  "Needs Review": "status-needsreview",
  "Approved": "status-approved",
  "Scheduled": "status-scheduled",
  "Published": "status-published"
};

dayTasks.forEach(task=>{
      const t=document.createElement('div');
t.className = `mt-1 p-2 rounded text-[10px] font-bold cursor-pointer ${priorityClass[task.priority]} ${statusClass[task.status] || ''}`;
      t.innerHTML=`${task.type==='UGC Video'?'üí∞ ':''}${task.title}`;

      if(task.platforms && task.platforms.length){
        const platformLabel=document.createElement('div');
        platformLabel.className='text-[9px] font-normal mt-1 opacity-70';
        platformLabel.textContent=task.platforms.join(', ');
        t.appendChild(platformLabel);
      }

      t.onclick=()=>openModal(task.id);
      cell.appendChild(t);
    });

    grid.appendChild(cell);
  }

  updateSummary();
}

function updateSummary(){
  const monthKey = `${currentViewDate.getFullYear()}-${currentViewDate.getMonth()}`;
  const monthlyTasks = tasks.filter(t=>{
    const d=new Date(t.date);
    const key=`${d.getFullYear()}-${d.getMonth()}`;
    return key===monthKey;
  });

  const completedCore = monthlyTasks.filter(t=>t.status==='Published' && t.type!=='UGC Video').length;
  const ugcStats = getMonthlyUGCStats();

  qs('#summaryStats').innerHTML=`
    <div><b>Current Tier Rate:</b> $${ugcStats.rate}/video</div>
    <div><b>Total UGC Bonus:</b> $${ugcStats.totalBonus}</div>
  `;

  updateCoreProgress(monthlyTasks);
}

function updateCoreProgress(monthlyTasks){
  const goals = [
    {name:'Short-Form UGC TikTok Videos', target:10, type:'UGC Video'},
    {name:'Blog Article', target:1, type:'Blog Article'},
    {name:'Shoot Coordination', target:3, type:'Shoot Coordination'},
    {name:'12 Posts Cross-Post IG/FB', target:12, type:'Crosspost'},
    {name:'Update Content Calendar', target:1, type:'Content Calendar'},
    {name:'UGC Outreach', target:30, type:'UGC Outreach'}
  ];

  qs('#coreProgress').innerHTML = goals.map(g=>{
    const count = monthlyTasks.filter(t=>t.type === g.type).length;
    const percent = Math.min(100, Math.round((count/g.target)*100));
    return `
      <div>
        <div class="flex justify-between mb-1">
          <span>${g.name}</span>
          <span>${count}/${g.target}</span>
        </div>
        <div class="w-full bg-slate-200 rounded-full h-2">
          <div class="bg-indigo-500 h-2 rounded-full" style="width:${percent}%"></div>
        </div>
      </div>
    `;
  }).join('');
}

function openModal(id=null,date=null){
  editingId=id;
  qs('#taskForm').reset();
  document.querySelectorAll('.platform-checkbox').forEach(cb=>cb.checked=false);
  qs('#deleteBtn').classList.add('hidden');

  if(id){
    const task=tasks.find(t=>t.id===id);
    qs('#mTitle').value=task.title;
    qs('#mType').value=task.type;
    qs('#mPriority').value=task.priority;
    qs('#mStatus').value=task.status;
    qs('#mDate').value=task.date;
    document.querySelectorAll('.platform-checkbox').forEach(cb=>{
      cb.checked = task.platforms && task.platforms.includes(cb.value);
    });
    qs('#deleteBtn').classList.remove('hidden');
  } else {
    if(date) qs('#mDate').value=date;
  }

  qs('#taskModal').setAttribute('aria-hidden','false');
}

function closeModal(){
  qs('#taskModal').setAttribute('aria-hidden','true');
  editingId=null;
}

function saveTask(){
  const selectedPlatforms = Array.from(document.querySelectorAll('.platform-checkbox:checked')).map(cb=>cb.value);

  const data={
    title:qs('#mTitle').value.trim(),
    type:qs('#mType').value,
    priority:qs('#mPriority').value,
    status:qs('#mStatus').value,
    date:qs('#mDate').value,
    platforms:selectedPlatforms
  };

  if(!data.title||!data.date) return alert('Title and Date required');

  if(editingId){
    const task=tasks.find(t=>t.id===editingId);
    Object.assign(task,data);
  } else {
    tasks.push({id:Date.now().toString(),...data});
  }

  sync();
  closeModal();
}

function deleteTask(){
  tasks=tasks.filter(t=>t.id!==editingId);
  sync();
  closeModal();
}

function sync(){
  localStorage.setItem(STORAGE_KEY,JSON.stringify(tasks));
  renderCalendar();
}

qs('#saveBtn').addEventListener('click',saveTask);
qs('#cancelBtn').addEventListener('click',closeModal);
qs('#deleteBtn').addEventListener('click',deleteTask);
qs('#prevMonth').addEventListener('click',()=>{currentViewDate.setMonth(currentViewDate.getMonth()-1);renderCalendar();});
qs('#nextMonth').addEventListener('click',()=>{currentViewDate.setMonth(currentViewDate.getMonth()+1);renderCalendar();});

renderCalendar();
</script>
</body>
</html>
